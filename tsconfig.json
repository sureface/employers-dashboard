{
  "compilerOptions": {
    "baseUrl": "./src/",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "types": ["element-plus/global"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": ["*"],
      "@components": ["components/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts",
    "../../../../Program Files/JetBrains/WebStorm 2022.2/plugins/JavaScriptLanguage/jsLanguageServicesImpl/external/lib.es5.d.ts",
    "../../../../Program Files/JetBrains/WebStorm 2022.2/plugins/JavaScriptLanguage/jsLanguageServicesImpl/external/lib.es5.d.ts",
    "../../../../Program Files/JetBrains/WebStorm 2022.2/plugins/JavaScriptLanguage/jsLanguageServicesImpl/external/lib.es5.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
